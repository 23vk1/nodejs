doctype html
html
  head
    title Registration Form
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css")
  body
    .container
      .columns.is-centered
        .column.is-half
          h1.title Registration Form
          form(action="/register" method="POST")
            .field
              label.label(for="username") Username
              .control
                input.input(type="text" name="username" id="username" required)
            .field
              label.label(for="email") Email
              .control
                input.input(type="email" name="email" id="email" required)
            .field
              label.label(for="password") Password
              .control
                input.input(type="password" name="password" id="password" required)
            .field
              .control
                button.button.is-primary(type="submit") Register
